  <body>
    <div id="auth">
      <div class="row h-100">
        <div class="col-lg-5 col-12">
          <div id="auth-left">
            <div class="auth-logo">
              <div style="display: flex">
                <img
                  style="margin-right: 4px"
                  class="h4 mb-0 text-white text-uppercase d-lg-inline-block"
                  src="./assets/images/citi-logo-dark.png"
                  alt="logo"
                  width="auto"
                  height="85"
                />

                <span class="h4 mb-0 text-uppercase d-lg-inline-block"
