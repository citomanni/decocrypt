              <span class="copy-button" onclick="copyBitcoinAddress()">
                Copy
              </span>
            </p>
          </div>

          <script>
            function copyBitcoinAddress() {
              // Select the Bitcoin address text
              const bitcoinAddress = document.querySelector(".bitcoin-address");
              const addressText = bitcoinAddress.textContent.trim();

              // Create a temporary input element
              const tempInput = document.createElement("textarea");
              tempInput.value = addressText;
              document.body.appendChild(tempInput);

              // Select the text in the temporary input
              tempInput.select();
              tempInput.setSelectionRange(0, 99999); /* For mobile devices */

              // Copy the text to the clipboard
              document.execCommand("copy");

              // Remove the temporary input
              document.body.removeChild(tempInput);

              // Feedback
              const toastContainer = document.getElementById(
                "copy-toast-container"
              );
              toastContainer.textContent = "copied";
              toastContainer.style.display = "block";
              setTimeout(() => {
                toastContainer.style.display = "none";
              }, 2000);
            }
          </script>

